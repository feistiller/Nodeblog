<%- include header %>
<p>
    <% if(user && (user.name == post.name)){ %>
    <span><a class="edit" href="/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">edit</a> </span>
    <span><a class="edit" href="/remove/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">delete</a> </span>
    <% } %>
</p>
<p class="info">
    writer:<a href="/u/<%= post.name %>"><%= post.name %></a>|date:<%= post.time.minute %>
    tags:
    <% post.tags.forEach(function (tag, index) { %>
    <% if(tag){ %>
    <a class="tag" href="/tag/<%= tag %>"><%= tag %></a>
    <% } %>
    <% }) %>
</p>
<p class="info">read:<%= post.pv %>|Comment<%= post.comments.length %></p>
<p><%- post.post %></p>

<%- include comment %>
<%- include footer %>